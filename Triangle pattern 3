import java.util.Scanner;
import java.lang.Math;
class Pyramid {
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        System.out.println("enter rows: ");
        int n=sc.nextInt();
        int a=1;
        for(int i=1;i<=n;i++){
            for(int k=1;k<=i;k++){
                System.out.print(Math.pow(a,2)+"   ");
                a=a+1;
            }
            System.out.println();
        }
    }
}
